<div id="frmSetorAlterar" class="dash-form">
  <div class="row form-group">
    <div class="col-sm-12 mx-auto bg-white rounded shadow table-striped">
      <div class="titulo-form">
        <img src="/images/edit-64.png" />
        <h3>Alterar</h3>
      </div>
      <fieldset class="form-group">
        <form action="/dashboard/setor/update" method="post" class="formulario">
          <label for="id_setor"># ID:</label>
          <input
            type="text"
            id="id_setor"
            name="id_setor"
            class="form-control"
            value="{{setor.id_setor}}"
            readonly
          />
          <label for="nome">Nome:</label>
          <input
            type="text"
            id="nome"
            name="nome"
            class="form-control"
            value="{{setor.nome}}"
            maxlength="30"
          />
          <br />
          <div class="text-center">
            <button class="btn btn-primary" type="reset">Cancelar</button>
            <button class="btn btn-primary" type="submit">Alterar</button>
          </div>
        </form>
      </fieldset>
    </div>
  </div>
</div>