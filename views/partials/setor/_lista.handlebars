<div class="dash-item">
  <div class="titulo-lista">
    <div class="search">
      <span><a href="/dashboard/setor/list">Setores</a></span>
      <form method="GET" action="/dashboard/setor">
        <input
          type="text"
          id="search"
          name="search"
          class="form-control"
          value="{{search}}"
          placeholder="nome"
        />
        <button type="submit" id="btn-search"></button>
        <a href="/dashboard/setor/reset">
          <img
            src="/images/eraser-32.png"
            alt="Remover filtro"
            title="Remover filtro"
          />
        </a>
      </form>
      <a href="/dashboard/setor/list#cadastro"><img
          src="/images/add-32.png"
          alt="Novo"
          title="Novo"
        /></a>
    </div>
  </div>
  <div class="mx-auto bg-white rounded shadow">
    <table class="table table-fixed table-striped table-setor">
      <thead class="thead-dark">
        <tr class="row">
          <th class="col-sm-1">#</th>
          <th class="col-sm-8">Nome</th>
          <th class="col-sm-3" colspan="3">Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each setores}}
          <tr class="row">
            <td class="col-sm-1">{{id_setor}}</td>
            <td class="col-sm-8">{{nome}}</td>
            <td class="col-sm-1">
              <a href="/dashboard/setor/view/{{id_setor}}">
                <img
                  src="/images/view-32.png"
                  alt="Consultar"
                  title="Consultar"
                />
              </a>
            </td>
            <td class="col-sm-1">
              <a href="/dashboard/setor/edit/{{id_setor}}">
                <img src="/images/edit-32.png" alt="Alterar" title="Alterar" />
              </a>
            </td>
            <td class="col-sm-1">
              <a href="/dashboard/setor/delete/{{id_setor}}">
                <img
                  src="/images/delete-32.png"
                  alt="Excluir"
                  title="Excluir"
                />
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <br />
  </div>
</div>