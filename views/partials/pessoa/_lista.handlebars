<div class="dash-item">
  <div class="titulo-lista">
    <div class="search">
      <span>
        <a href="/dashboard/familia/list">Familia [{{familia.nome}}]</a>
        ::
        <a href="/dashboard/pessoa/familia/{{idFamilia}}">Pessoas</a>
      </span>
      <a href="/dashboard/pessoa/familia/{{idFamilia}}#cadastro"><img
          src="/images/add-32.png"
          alt="Novo"
          title="Novo"
        /></a>
    </div>
  </div>
  <div class="mx-auto bg-white rounded shadow">
    <table class="table table-fixed table-striped table-pessoa">
      <thead class="thead-dark">
        <tr class="row">
          <th class="col-sm-1">#</th>
          <th class="col-sm-8">Nome</th>
          <th class="col-sm-3" colspan="3">Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each pessoas}}
          <tr class="row">
            <td class="col-sm-1">{{id_pessoa}}</td>
            <td class="col-sm-8">{{nome}}</td>
            <td class="col-sm-1">
              <a href="/dashboard/pessoa/view/{{id_pessoa}}">
                <img
                  src="/images/view-32.png"
                  alt="Consultar"
                  title="Consultar"
                />
              </a>
            </td>
            <td class="col-sm-1">
              <a href="/dashboard/pessoa/edit/{{id_pessoa}}">
                <img src="/images/edit-32.png" alt="Alterar" title="Alterar" />
              </a>
            </td>
            <td class="col-sm-1">
              <a href="/dashboard/pessoa/delete/{{id_pessoa}}">
                <img
                  src="/images/delete-32.png"
                  alt="Excluir"
                  title="Excluir"
                />
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <br />
  </div>
</div>