<div id="frmUsuarioConsultar" class="dash-form mt-5">
  <div class="row">
    <div
      class="col-sm-12 mx-auto bg-white rounded shadow table-striped dash-form"
    >
      <div class="titulo-form">
        <img src="/images/view-64.png" />
        <h3>Consultar</h3>
      </div>
      <form action="/dashboard/usuario" method="post">
        <label for="id_usuario"># ID:</label>
        <input
          type="text"
          name="id_usuario"
          class="form-control"
          value="{{usuario.id_usuario}}"
          readonly
        />
        <label for="nome">Nome:</label>
        <input
          type="text"
          name="nome"
          class="form-control"
          value="{{usuario.nome}}"
          readonly
        />
        <label for="login">Login:</label>
        <input
          type="text"
          name="login"
          class="form-control"
          value="{{usuario.login}}"
          readonly
        />
        <br />
        <br />
      </form>
    </div>
  </div>
</div>