<div id="frmUsuarioAlterar" class="dash-form">
  <div class="row form-group">
    <div class="col-sm-12 mx-auto bg-white rounded shadow table-striped">
      <div class="titulo-form">
        <img src="/images/edit-64.png" />
        <h3>Alterar</h3>
      </div>
      <fieldset class="form-group">
        <form
          action="/dashboard/usuario/update"
          method="post"
          class="formulario"
        >
          <label for="id_usuario"># ID:</label>
          <input
            type="text"
            id="id_usuario"
            name="id_usuario"
            class="form-control"
            value="{{usuario.id_usuario}}"
            readonly
          />
          <label for="nome">Nome:</label>
          <input
            type="text"
            id="nome"
            name="nome"
            class="form-control"
            value="{{usuario.nome}}"
            maxlength="30"
          />
          <label for="login">Login:</label>
          <input
            type="text"
            id="login"
            name="login"
            class="form-control"
            value="{{usuario.login}}"
            maxlength="30"
          />
          <label for="senha">Senha:</label>
          <input
            type="password"
            id="senha"
            name="senha"
            class="form-control"
            value="{{usuario.senha}}"
            maxlength="20"
          />
          <br />
          <div class="text-center">
            <button class="btn btn-primary" type="reset">Cancelar</button>
            <button class="btn btn-primary" type="submit">Alterar</button>
          </div>
        </form>
      </fieldset>
    </div>
  </div>
</div>