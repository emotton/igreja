<div id="frmUsuarioExcluir" class="dash-form mt-5">
  <div class="row">
    <div
      class="col-sm-12 mx-auto bg-white rounded shadow table-striped dash-form"
    >
      <div class="titulo-form">
        <img src="/images/delete-64.png" />
        <h3>Excluir</h3>
      </div>
      <form action="/dashboard/usuario/delete" method="post">
        <label for="id_usuario"># ID:</label>
        <input
          type="text"
          name="id_usuario"
          class="form-control"
          value="{{usuario.id_usuario}}"
          readonly
        />
        <label for="nome">Nome:</label>
        <input
          type="text"
          name="nome"
          class="form-control"
          value="{{usuario.nome}}"
          readonly
        />
        <label for="login">Login:</label>
        <input
          type="text"
          name="login"
          class="form-control"
          value="{{usuario.login}}"
          readonly
        />
        <br />
        <div class="text-center">
          <button class="btn btn-primary" type="submit">Excluir</button>
        </div>
      </form>
    </div>
  </div>
</div>