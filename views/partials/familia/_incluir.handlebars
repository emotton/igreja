<div id="frmFamiliaIncluir" class="dash-form">
  <div class="row form-group">
    <div class="col-sm-12 mx-auto bg-white rounded shadow table-striped">
      <div class="titulo-form">
        <img src="/images/add-64.png" />
        <h3>Incluir</h3>
      </div>
      <fieldset class="form-group">
        <form action="/dashboard/familia/save" method="post" class="formulario">
          <label for="id_setor">Setor:</label>
          <select name="id_setor" class="form-control">
            <option value="0">Selecione o setor</option>
            {{#each setores}}
              <option value="{{id_setor}}">{{nome}}</option>
            {{/each}}
          </select>
          <label for="nome">Nome:</label>
          <input
            type="text"
            id="nome"
            name="nome"
            class="form-control"
            maxlength="40"
            placeholder="Nome da família"
          />
          <label for="endereco">Endereço:</label>
          <input
            type="text"
            id="endereco"
            name="endereco"
            class="form-control"
            maxlength="30"
            placeholder="Endereço"
          />
          <label for="numero">Número:</label>
          <input
            type="text"
            id="numero"
            name="numero"
            class="form-control"
            maxlength="10"
            placeholder="Número"
          />
          <br />
          <br />
          <div class="text-center">
            <button class="btn btn-primary" type="reset">Cancelar</button>
            <button class="btn btn-primary" type="submit">Incluir</button>
          </div>
        </form>
      </fieldset>
    </div>
  </div>
</div>